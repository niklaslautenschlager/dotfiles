#Basics
set $mod Mod4
font pango:monospace 10

# Terminal
set $term kitty

#Startup
exec --no-startup-id picom
exec --no-startup-id autorandr --change
exec_always --no-startup-id sleep 1 && ~/.local/bin/set-wallpaper
exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1

#Audio
exec --no-startup-id pipewire
exec --no-startup-id pipewire-pulse
exec --no-startup-id wireplumber


#Visuals
#Gaps
gaps inner 8
gaps outer 6

#Borders
default_border pixel 2
hide_edge_borders smart

#Colors
client.focused #88c0d0 #0b0f14 #d8dee9 #88c0d0 #88c0d0
client.unfocused #1f2430 #0b0f14 #aab3c2 #1f2430 #1f2430
client.focused_inactive #1f2430 #0b0f14 #aab3c2 #1f2430 #1f2430
client.urgent #bf616a #0b0f14 #d8dee9 #bf616a #bf616a

#Workspaces
workspace 1 output DP-0
workspace 2 output DP-0
workspace 3 output DP-0
workspace 4 output DP-0
workspace 5 output DP-0

workspace 6 output HDMI-1
workspace 7 output HDMI-1
workspace 8 output HDMI-1
workspace 9 output HDMI-1
workspace 10 output HDMI-1

#Keybind
#Terminal
bindsym $mod+Return exec $term

#Filemanager
bindsym $mod+Shift+f exec nemo

#Browser
bindsym $mod+Shift+b exec firefox

#Rofi
bindsym $mod+d exec rofi -show drun
bindsym $mod+p exec --no-startup-id ~/power-menu.sh


#Workspaces numbered
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+10 workspace number 10

#Move Workspaces
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+10 move container to workspace number 10


#Orientation
bindsym $mod+v split h
bindsym $mod+h split v

#Close Windows
bindsym $mod+Shift+q kill

#QOL
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

#Audiokeys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK -5%

#Bar
bar {
  status_command i3status -c ~/.config/i3status/config
  position top
  colors {
   background #0b0f14
   statusline #d8dee9
   separator #1f2430
   focused_workspace #88c0d0 #88c0d0 #0b0f14
   inactive_workspace #1f2430 #1f2430 #d8dee9
   urgent_workspace #bf616a #bf616a #0b0f14
  }
}

